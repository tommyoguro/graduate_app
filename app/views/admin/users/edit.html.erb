<h1>Admin::Users#edit</h1>
<p>Find me in app/views/admin/users/edit.html.erb</p>

<h2>ユーザー情報編集</h2>

<%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
  <div class="mb-3">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :admin, "管理者権限" %>
    <%= f.check_box :admin %> 管理者にする
  </div>

  <%= f.submit "更新", class: "btn btn-primary" %>
<% end %>

<%= link_to "戻る", admin_users_path, class: "btn btn-secondary" %>

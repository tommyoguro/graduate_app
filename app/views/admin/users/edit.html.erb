<h2>ユーザー編集</h2>

<%= form_with(model: @user, url: admin_user_path(@user), method: :patch, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :is_admin, class: "form-check-input" %>
    <%= f.label :is_admin, "管理者権限を付与" %>
  </div>

  <%= f.submit "更新", class: "btn btn-primary" %>
  <%= link_to "キャンセル", admin_users_path, class: "btn btn-secondary" %>
<% end %>


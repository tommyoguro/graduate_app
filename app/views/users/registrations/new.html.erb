<div class="container mt-5">
  <div class="card shadow-lg p-4">
    <div class="card-header bg-dark text-white text-center">
      <h2>ユーザー登録</h2>
    </div>

    <追加: エラーメッセージを表示 -->
    <%= render "shared/error_messages", resource:  resource %>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }, data: { turbo: false }) do |f| %>
        
        <div class="mb-3">
          <%= f.label :name, "氏名", class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "氏 名", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :name_kana, "フリガナ", class: "form-label" %>
          <%= f.text_field :name_kana, class: "form-control", placeholder: "フリガナ", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :company_name, "会社名", class: "form-label" %>
          <%= f.text_field :company_name, class: "form-control", placeholder: "会社名", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :division_name, "部署名", class: "form-label" %>
          <%= f.text_field :division_name, class: "form-control", placeholder: "部署名", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :email, "メールアドレス（ユーザーID）", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <%= f.password_field :password, class: "form-control", placeholder: "パスワード", required: true %>
        </div>

        <div class="text-center">
          <%= f.submit "登録", class: "btn btn-primary w-50" %>
        </div>
      
      <% end %>
    </div>
  </div>

  <footer class="mt-4 text-center">
    <div class="d-flex justify-content-center">
      <%= link_to "サイトマップ", class: "me-3" %>
      <%= link_to "ご利用にあたって", class: "me-3" %>
      <%= link_to "お問い合わせ" %>
    </div>
    <p class="mt-2">&copy; 2025 NISSAN</p>
  </footer>
</div>




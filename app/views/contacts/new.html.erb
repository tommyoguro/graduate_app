<h2>お問い合わせ</h2>

<エラーメッセージの表示 -->
<%= render "shared/error_messages", resource: @contact %>

<%= form_with url: contact_path, method: :post, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, "お名前" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="mb-3">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class: "form-control", required: true %>
  </div>
  <div class="mb-3">
    <%= f.label :message, "お問い合わせ内容" %>
    <%= f.text_area :message, class: "form-control", required: true %>
  </div>
  <%= f.submit "送信", class: "btn btn-primary" %>
<% end %>

